<header class="head typo-l">
  <h1>
    {{model.result.letter.letter}} <span>as</span> {{model.result.letter.word}}
  </h1>
</header>

<div class="body typo-l">
  {{{model.result.letter.definition}}}
</div>

<section class="section-content">
  <h3 class="notation">Up to {{model.result.repos.length}} Projects So Far</h3>

  <ul class="projects">
    {{#each model.result.repos as |repo|}}
      <li class="project">
        {{#link-to "project" repo.slug}}
          {{repo.owner.username}} <span class="path-divider">/</span> {{repo.name}} <span class="amount">{{repo.count}}</span>
        {{/link-to}}
      </li>
    {{/each}}
  </ul>
</section>

