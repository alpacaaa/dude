<li {{bind-attr class=":comment :typo-m is_first selected"}}>
  <i class="tributary">
    {{#user-avatar user=comment.author}}{{/user-avatar}}
    <span class="username">
      {{#user-name user=comment.author}}{{/user-name}}
    </span>
    <span class="meta">
      {{#if showRepo}}
        {{#link-to 'project' comment.repo.slug}}
          {{comment.repo.name}}
        {{/link-to}}
        Â·
      {{/if}}
      <a href="{{unbound comment_permalink}}">
        <time {{bind-attr datetime="comment.date"}}>{{timeAgo}}</time>
      </a>
    </span>
  </i>

  {{{comment.body}}}
</li>
