<section>
  <header class="notation-closed">
    <h3>
      <a href="" {{action "show_starred_repos"}}>Quick reach your Github starred repositories</a>.
    </h3>
  </header>
</section>

{{#if repos}}
  <section>
    <header class="notation">
      <h3>Your starred repositories.</h3>
    </header>

    <ul class="projects">

      {{#each repos as |repo|}}
        <li class="project">
          {{#link-to "project" repo.slug}}
            {{repo.slug}} <span class="amount">{{repo.count}}</span>
          {{/link-to}}
        </li>
      {{/each}}
    </ul>
  </section>
{{/if}}
